<section class="last-operations-container">
    <input type="checkbox" id="toggle-visible-last-operation" class="hide">
    <label for="toggle-visible-last-operation" class="toggle-label">
        <span></span>
    </label>
    <div class="last-operation-list">
        {% for posting in last_operation() %}
            <div class="last-operation">
                <table>
                    <tr>
                        <td>{{ posting.account.name}}</td>
                        <td>{{ posting.category.name }}</td>
                    </tr>
                    <tr>
                        <td>{{ posting_type(posting) }}</td>
                        <td>{{ posting.money | app_money }}</td>
                    </tr>
                </table>
            </div>
        {% endfor %}
    </div>
</section>
